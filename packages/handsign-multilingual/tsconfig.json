{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "module": "ES2022",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "src/types.ts"
    ],
    "paths": {
      "#/*": [
        "./src/*"
      ],
      "#tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "src",
    "custom.d.ts",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}